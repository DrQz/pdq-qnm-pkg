#--------------------------------------------------------------------------

EXT    = .exe
CC     = gcc
LIB    = ../../../lib
INCL   = ../../../lib

PGM    = \
         dbc

#--------------------------------------------------------------------------

all:	dbc

#--------------------------------------------------------------------------

dbc:	dbc.c $(LIB)/libpdq.a
	${CC} -o dbc dbc.c -I$(INCL) -L$(LIB) -lpdq -lm

dbct:	dbct.c
	${CC} -o dbct dbct.c -I$(INCL) -L$(LIB) -lpdq -lm

#--------------------------------------------------------------------------

ln:
	ln ../../../java/examples/Ch6_*.out .

clean:
	-/bin/rm ${PGM} *.o *.exe *~ *.log *.tst Ch6_*.out

#--------------------------------------------------------------------------

test:
	./test.sh

#--------------------------------------------------------------------------

